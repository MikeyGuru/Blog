<div class="blog1">
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Written by:</strong>
  <%= @post.author %>
  <strong>Date:</strong>
  <%= @post.published_date %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
<p>
 <strong>User:</strong>
 <%= comment.user %>
 </p>

 <p>
   <strong>Comment:</strong>
   <%= comment.body %>
 </p>
<% end %>


<h4>Add a comment:</h4>

<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <!-- <%= f.label :user %> -->
    <%= f.hidden_field :user, value: @current_user  %>
  </p>
  <p>

    <%= f.text_area :body %>
  </p>
  <div>
    <%= f.submit %>
  </div>
<% end %>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', :back %>
