<h1>New Blogs</h1>

<table id="fronttable" class="slideExpandUp">
  <tbody>
    <% @posts.order(published_date: :desc).each do |post| %>
      <tr>
        <td>
        <h3><%= link_to post.title, post %></h3>
        <p><%= post.author%>  <%=  post.published_date %></p>
        <p><% if post.image? %>
          <%= image_tag post.image.url(:medium) %>
          <%end%>

        </p>

        <%= markdown(truncate(post.body, length: 140)){ link_to "Show More", post } %>
        <p><%= link_to 'Read', post %></p>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
